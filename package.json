{
  "name": "@cheatron/cheatron-log",
  "version": "1.0.4",
  "description": "Advanced Winston-based logging library for the Cheatron ecosystem",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "LICENSE"
  ],
  "license": "MIT",
  "keywords": [
    "cheatron",
    "logger",
    "winston",
    "logging"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "lint": "eslint \"{src,tests}/**/*.{js,ts,jsx,tsx}\" --cache",
    "lint:fix": "eslint \"{src,tests}/**/*.{js,ts,jsx,tsx}\" --fix",
    "format": "prettier --write \"{src,tests}/**/*.{js,ts,jsx,tsx,css,md,json}\"",
    "format:check": "prettier --check \"{src,tests}/**/*.{js,ts,jsx,tsx,css,md,json}\""
  },
  "dependencies": {
    "winston": "3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5",
    "typescript-eslint": "^8.56.0"
  }
}
